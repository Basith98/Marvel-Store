<div class="container-fluid bg-soft">
    <div class="row">
        <div class="col-12 mt-5"> 
         <div class="layout-container"> 
        <div class="layout-page"> 
          <div class="content-wrapper">
 
            <div class="container-xxl flex-grow-1 container-p-y">
 
               <div class="row mt-5">
                <div class="col-xl">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">Add User</h5>
                      <small class="text-muted float-end"></small>
                    </div>
                    <div class="card-body">
                      <form action="/admin/updateUser" enctype="multipart/form-data" method="post">
                        {{!-- {{#if mailExist}}
                        <p class="error txt-danger"> Email-Id already exist</p>
                        {{/if}} --}}
                        <div class="mb-3">
                          <label class="form-label"  for="basic-default-fullname">E-Mail Id</label>
                          <input type="text" name="eMail" class="form-control" id="basic-default-fullname"
                           placeholder="please enter your E-Mail Id" required="required"/>
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="basic-default-company">phone Number</label>
                          <input required="required" type="text" name="phNo" class="form-control" id="basic-default-company" placeholder="please enter your Phone Number" />
                        </div> 
                        <div class="mb-3">
                          <label  class="form-label" for="basic-default-message">First Name</label>
                          <input required="required" type="text" name="firstName" class="form-control" id="basic-default-company" placeholder="please enter your First Name" />
                        </div>

                        <div class="mb-3">
                          <label  class="form-label" for="basic-default-message">Last Name</label>
                          <input required="required" type="text" name="lastName" class="form-control" id="basic-default-company" placeholder="please enter your Last Name" />
                        </div>

                        <div class="mb-3">
                          <label  class="form-label" for="basic-default-message">Password</label>
                          <input required="required" type="password" name="password" class="form-control" id="basic-default-company" placeholder="please enter your Password" />
                        </div>
                         
                         <div class="mb-3">
                        <label for="formFile" class="form-label">Image</label>
                        <input class="form-control" name="image" type="file" id="formFile" />
                      </div>
                        <input type="submit" class="btn btn-primary" value="Submit">
                      </form>
                    </div>
                  </div>
                </div>
                
              </div>
            </div> 

            <div class="content-backdrop fade"></div>
          </div>
         </div>
       </div>

      </div>
    </div>
</div>
 