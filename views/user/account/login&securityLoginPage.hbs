<div class="container mt-5 mb-5">

    <div class="d-flex justify-content-center">
        <div class="card mt-5 pt-2 pb-3" id="bgHover" style="width: 24rem; border-radius: 11px">
            <div class="card-body ml-5">
                <h2>Sign in</h2>
                <hr style="color: rgb(182, 182, 182);">
                <br>
                {{#if loginFail}}
                <p style="color: red;">Incorrect Password</p>
                {{/if}}
                <div class="row">
                    <div class="col-12 col-lg-2">
                        <img src="/images/account/default._CR0,0,1024,1024_SR50,50_.jpg" alt="">
                    </div>
                    <div class="col-12 col-lg-8">
                        <h5>{{userName}}</h5>
                        <h6>{{email}}</h6>
                    </div>
                </div>
                <form action="/checkPassword" method="post">
                    <div class="mt-3">
                        <label class="form-label" for="basic-default-fullname">Password</label>
                        <input type="password" label="hello" class="form-control" name="password" autocomplete="off" />
                    </div>
                    <div class="mt-5 mb-5">
                        <button class="btn  btn-block border-secondary mt-4"
                            style="background-color: #b0f6f8; width:100%; font-weight:600" type="submit">
                            Sign in
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>